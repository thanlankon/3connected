<template id="cpanel.navigation-panel.administrator">

  <div id="navigation-panel" class="navigation-panel">
     <div id='navigation-tab'>
        <ul class="tab-items">
          <li>
            <span class="icon"></span> Home
          </li>
          <li>
            <span class="icon"></span> System
          </li>
        </ul>

        <div class="tab-panel tab-home">

          <div class="button-group">
            <a class="button button-large" href="{{url module="manage-account"}}">
              <div class="button-icon icon-account">
              </div>
              <div class="button-text">
                {{lang 'manage.account'}}
              </div>
            </a>
          </div>

          <div class="button-group divider"></div>

          <div class="button-group">
            <a class="button button-large" href="{{url module="manage-student"}}">
              <div class="button-icon icon-student">
              </div>
              <div class="button-text">
                {{lang 'manage.student'}}
              </div>
            </a>
          </div>
          <div class="button-group">
            <a class="button button-large" href="{{url module="manage-staff"}}">
              <div class="button-icon icon-staff">
              </div>
              <div class="button-text">
                {{lang 'manage.staff'}}
              </div>
            </a>
          </div>

          <div class="button-group">
            <a class="button button-small" href="{{url module="manage-student" action="create"}}">
              <span class="button-icon icon-create-student">
              </span>
              <span class="button-text">
                {{lang 'student.create'}}
              </span>
            </a>
            <a class="button button-small" href="{{url module="manage-staff" action="create"}}">
              <span class="button-icon icon-create-staff">
              </span>
              <span class="button-text">
                {{lang 'staff.create'}}
              </span>
            </a>
          </div>

          <div class="button-group divider"></div>

          <div class="button-group">
            <a class="button button-large" href="{{url module="news"}}">
              <div class="button-icon icon-news">
              </div>
              <div class="button-text">
                {{lang 'news'}}
              </div>
            </a>
          </div>

          <div class="button-group">
            <a class="button button-large" href="{{url module="news" action="create"}}">
              <div class="button-icon icon-create-news-large">
              </div>
              <div class="button-text">
                {{lang 'news.create'}}
              </div>
            </a>
          </div>

          <div class="button-group divider"></div>

          <div class="button-group">
          <a class="button button-large" href="{{url module="profile" action="change-password"}}">
            <div class="button-icon icon-password">
            </div>
            <div class="button-text">
              {{lang 'profile.changePassword'}}
            </div>
          </a>
         </div>

        </div>

        <div class="tab-panel tab-system">

          <div class="button-group">
            <a class="button button-large" href="{{url module="manage-department"}}">
              <div class="button-icon icon-department">
              </div>
              <div class="button-text">
                {{lang 'manage.department'}}
              </div>
            </a>
          </div>

          <div class="button-group divider"></div>

          <div class="button-group">
            <a class="button button-large" href="{{url module="manage-news-category"}}">
              <div class="button-icon icon-news-category">
              </div>
              <div class="button-text">
                {{lang 'manage.newsCategory'}}
              </div>
            </a>
          </div>

        </div>

     </div>
  </div>

</template>
