<template id="cpanel">

  <div id="cpanel" class="cpanel">

    <div class="header">

      <div class="left-section">
        <span class="app-logo"></span>
        <span class="app-name">3connected</span>

        <div class="expander" id="expander">
          <ul class="navigator" id="navigator">
            {{partial id="cpanel.workspace-list.all"}}
          </ul>
        </div>

        <span class="location" id="location"></span>
      </div>

      <div class="right-section">
        <span class="username">Nguyễn Đức Trọng ({{user.username}})</span>
        <a href="#" class="sign-out" id="button-logout">{{lang "logout"}}</a>
      </div>

      <span class="title">
        {{lang 'app.title'}}
      </span>
    </div>

    <div id="forms" class="forms">
    </div>

    <div class="footer">
      <div class="copyright">
        Copyright &copy; Group 6 - FUDN K6C Capstone Project
      </div>
    </div>

  </div>

</template>
